<%include layout/head.ejs%>

<%include layout/nav.ejs%>

<div class="container" ng-controller="AngularController">
     <!--ng-controller="AngularController"-->
    {{name1}}

    <hr/>
    <p>{{message}}</p>
    <hr/>
   <div class="row">
       <input type="search" ng-model="q"
              placeholder="filter persons..." />
   </div>
  <div class="row">
      <table id="tableData"
             class="table table-bordered">
      <thead>
          <th>Lp.</th>
          <th>First Name</th>
          <th>Last Name</th>
      </thead>
          <!-- Angular directive ng-repeat track by $index-->
          <tr ng-repeat="person in people
                          | filter:q">

              <td>{{$index+1}}</td>
              <td>{{person.firstName}}</td>
              <td>{{person.lastName}}</td>
          </tr>
      </table>
  </div>

    <div class="row">
        <div class="col-lg-12">
            <form novalidate role="form"
                  class="form-inline">
            <div class="form-group">
              <label for="firstName">First Name</label>
                <input ng-model="person.firstName"
                 type="text" class="form-control"
                 id="firstName" placeholder="Enter first name">
            </div>
             <div class="form-group">
                <label for="lastName">Last name</label>
                <input ng-model="person.lastName"
                type="text" class="form-control"
                id="lastName" placeholder="Enter last name">
             </div>
                <!--Template  {{ }}" markup-->
    <button ng-click="addPerson()"
    class="btn btn-action">{{btnAddText}}</button>
            </form>
        </div>
    </div>

  <!-- Modal dialog -->

</div>
<%include layout/foot.ejs%>

</body>
</html>

