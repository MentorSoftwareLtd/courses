<!DOCTYPE html>
<html ng-app="myApp">
  <head>
    <title>Example Jquery</title>
    <link rel='stylesheet' href='/public/stylesheets/style.css' />
    <link rel='stylesheet' href='/node_modules/bootstrap/dist/css/bootstrap.css'/>
  </head>
  <body ng-controller="MainController">

  <!-- Fixed navbar -->
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <!-- Button for smallest screens -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span
                  class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">
          <img height="40px" src="/public/images/MainLogoWhite.png"
               alt="Mentor Software Logo"></a>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav pull-right">
          <li id="liHome" class="active">
            <a href="/">Home</a></li>
          <li>
            <a href="/add">Add</a>
          </li>
        </ul>
      </div>
      <!--/.nav-collapse -->
    </div>
  </div>

<div class="container" style="padding-top: 10px;">


  <h4>Persons</h4>
  <div class="row">

    <table id="tableData"
           class="table table-bordered table-hover">
      <thead>
      <th>Lp.</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th></th>
      </thead>
      <tr class="active" ng-repeat="person in persons">
        <td>{{$index +1}}</td>
        <td>{{person.firstName}}</td>
        <td>{{person.lastName}}</td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="row">
      <a id="btnAddRow"
              class="btn btn-success" href="/add">Add</a>
      <button id="btnLoadJson"
              class="btn btn-sucess" ng-click="load();">Load</button>

    </div>
  </div>
</div>
    <script src="/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="/node_modules/angular/angular.js"></script>
    <script src="/public/javascripts/app.js"></script>
  </body>
</html>
